{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@commonServices/*": ["common/services/*"],
      "@commonItems/*": ["common/items/*"],
      "@locationComponents/*": ["modules/location/components/*"],
      "@locationModels/*": ["modules/location/models/*"],
      "@locationServices/*": ["modules/location/services/*"],
      "@catalogComponents/*": ["modules/catalog/components/*"],
      "@catalogServices/*": ["modules/catalog/services/*"],
      "@catalogModels/*": ["modules/catalog/models/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
